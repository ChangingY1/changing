<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.changing.classroom.user.mapper.UserMapper">

    <sql id="columns">
        id,student_id studentId,password,name,phone_number phoneNumber,avatar,description,status,create_time createTime,update_time updateTime,is_deleted isDeleted,hours
    </sql>

<!--    //4 用户删除-->
    <update id="deleteById">
        update users set is_deleted=1 where id=#{id}
    </update>
    <update id="deleteByStudentId">
        update users set is_deleted=1 where student_id=#{studentId}
    </update>

<!--    //3 用户修改-->
    <update id="update">
        update users set
        <if test="studentId != null and studentId != ''">
            student_id = #{studentId},
        </if>
        <if test="password != null and password != ''">
            password = #{password},
        </if>
        <if test="name != null and name != ''">
            name = #{name},
        </if>
        <if test="phoneNumber != null and phoneNumber != ''">
            phone_number = #{phoneNumber},
        </if>
        <if test="description != null and description != ''">
            description = #{description},
        </if>
        <if test="status != null and status != ''">
            status = #{status},
        </if>
        <if test="hours != null and hours != ''">
            hours = #{hours},
        </if>
        update_time =  now()
        where
        id = #{id}
    </update>

<!--    //2 用户添加-->
    <insert id="save">
        insert into users (
            id,
            student_id,
            password,
            name,
            phone_number,
            avatar,
            description,
            status,
            hours
        ) values (
                     #{id},
                     #{studentId},
                     #{password},
                     #{name},
                     #{phoneNumber},
                     #{avatar},
                     #{description},
                     #{status},
                     #{hours}
                 )
    </insert>

<!--    //1 用户条件分页查询接口-->
    <select id="findByPage" resultType="com.changing.classroom.model.entity.user.User">
        select <include refid="columns"/>
        from users
        <where>
            <if test="keyword != null and keyword != ''">
                and student_id like concat('%',#{keyword},'%')
            </if>
            <if test="createTimeBegin != null and createTimeBegin != ''">
                and create_time >= #{createTimeBegin}
            </if>
            <if test="createTimeEnd != null and createTimeEnd != ''">
                and create_time &lt;= #{createTimeEnd}
            </if>
            and is_deleted=0
        </where>
        order by id desc
    </select>

    <select id="selectUserInfoByStudentId" resultType="com.changing.classroom.model.entity.user.User">
        SELECT <include refid="columns"/>
        FROM users
        WHERE student_id=#{studentId}
          and is_deleted=0
    </select>
    <select id="selectUserInfoByPhoneNumber" resultType="com.changing.classroom.model.entity.user.User">
        SELECT <include refid="columns"/>
        FROM users
        WHERE phone_number=#{phoneNumber}
        and is_deleted=0
    </select>
    <select id="getUserInfoById" resultType="com.changing.classroom.model.vo.h5.UserInfoVo">
        SELECT <include refid="columns"/>
        FROM users
        WHERE id=#{userId}
        and is_deleted=0
    </select>
</mapper>